<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PrimaryInterface1._1.Controls">
    <ControlTemplate x:Key="ExpandedBoxTemplate" TargetType="local:ConnectStateCell">
        <Rectangle Width="16" Height="16" Fill="#2500FFFF" Name="Background"></Rectangle>
        <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Stroke" Value="#FF000000" TargetName="Background"></Setter>
            </Trigger>
            <Trigger Property="IsCommon" Value="True">
                <Setter Property="Fill" Value="#7F00FFFF" TargetName="Background"></Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>



    <Style x:Key="ExpandedLabelStyle" TargetType="local:ConnectStateCell">
        <Setter Property="Template" Value="{StaticResource ExpandedBoxTemplate}"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
</ResourceDictionary>